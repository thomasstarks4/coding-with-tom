RewriteEngine On
RewriteBase /

# âœ… EXCLUDE the API from SPA rewrite
RewriteCond %{REQUEST_URI} ^/progress-tracker/api/ [NC]
RewriteRule ^ - [L]

# SPA rewrite for everything else
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteRule . /index.html [L]

